{
  "manifest_version": 2,

  "name": "PR-Helper",
  "description": "This extension tracks and manages pull requests for your github projects",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon-128.png",
    "default_title": "PR-Helper",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

  "options_page": "options.html",

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }
}